<h1>Edit MADS Temporal</h1>
<%= form_for @mads_temporal do |f| %>
  <%= label_tag 'mads_temporal[name]', "Name" %>
  <%= text_field_tag 'mads_temporal[name][]', @mads_temporal.name %>
  <br>

  <%= label_tag 'mads_temporal[elementList_attributes][][temporalElement_attributes][][elementValue]', "Element" %>
  <%= text_field_tag 'mads_temporal[elementList_attributes][][temporalElement_attributes][][elementValue]', @mads_temporal.elementList.first.elementValue %>
  <br>

  <%= label_tag 'mads_temporal[externalAuthority]', "Authority" %>
  <%= text_field_tag 'mads_temporal[externalAuthority][]', @mads_temporal.externalAuthority.rdf_subject %>
  <br>

  <%= label_tag 'mads_temporal[scheme]', "Scheme" %>
  <%= select_tag 'mads_temporal[scheme]', options_for_select(@mads_schemes, :selected => @mads_temporal.scheme.rdf_subject), {:include_blank => 'Select Scheme'} %>
  <br>

  <%=f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Cancel", mads_temporal_path(@mads_temporal), class: "btn btn-primary" %>
<%end%>
