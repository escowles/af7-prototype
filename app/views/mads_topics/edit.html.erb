<h1>Edit MADS Topic</h1>
<%= form_for @mads_topic do |f| %>
  <%= label_tag 'mads_topic[name]', "Name" %>
  <%= text_field_tag 'mads_topic[name][]', @mads_topic.name %>
  <br>

  <%= label_tag 'mads_topic[elementList_attributes][][topicElement_attributes][][elementValue]', "Element" %>
  <%= text_field_tag 'mads_topic[elementList_attributes][][topicElement_attributes][][elementValue]', @mads_topic.elementList.first.elementValue %>
  <br>

  <%= label_tag 'mads_topic[externalAuthority]', "Authority" %>
  <%= text_field_tag 'mads_topic[externalAuthority][]', @mads_topic.externalAuthority.rdf_subject %>
  <br>

  <%= label_tag 'mads_topic[scheme]', "Scheme" %>
  <%= select_tag 'mads_topic[scheme]', options_for_select(@mads_schemes, :selected => @mads_topic.scheme.rdf_subject), {:include_blank => 'Select Scheme'} %>
  <br>

  <%=f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Cancel", mads_topic_path(@mads_topic), class: "btn btn-primary" %>
<%end%>
